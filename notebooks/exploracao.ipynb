import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

## Conversão das espécies para nomes mais simples ## 
url = "https://archive.ics.uci.edu/ml/machine-learning-databases/iris/iris.data"
columns = ["sepal_length", "sepal_width", "petal_length", "petal_width", "species"]

df = pd.read_csv(url, header=None, names=columns)

# Visualizar primeiras linhas
df.head()

mapping = {
    "Iris-setosa": "setosa",
    "Iris-versicolor": "versicolor",
    "Iris-virginica": "virginica"
}
df["species_human"] = df["species"].replace(mapping)

df.head()

## Estatísticas descritivas ## 
df.describe()

## Distribuição das espécies ## 
df["species_human"].value_counts()

## Pairplot (visualização multivariada) ## 
sns.pairplot(df, hue="species_human", vars=["sepal_length", "sepal_width", "petal_length", "petal_width"])
plt.show()

## Gráfico de dispersão (pétala) ##
sns.scatterplot(data=df, x="petal_length", y="petal_width", hue="species_human")
plt.title("Relação entre comprimento e largura da pétala")
plt.show()

## Gráfico de dispersão (sépala) ##
sns.scatterplot(data=df, x="sepal_length", y="sepal_width", hue="species_human")
plt.title("Relação entre comprimento e largura da sépala")
plt.show()

## Correlação entre variáveis ##
corr = df.drop(columns=["species", "species_human"]).corr()
sns.heatmap(corr, annot=True, cmap="coolwarm")
plt.title("Matriz de correlação entre atributos")
plt.show()
